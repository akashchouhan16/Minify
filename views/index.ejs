        </nav>
    </div>
    <!-- <nav class="navbar  navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1">URL Encoder(Shortener)</span>
    </nav> -->
    <div class="container" style="-webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;">
        
        <form action="/shortUrls" method="POST" class="my-4 form-inline">
            <label for="fullUrl" class="sr-only">Url</label>
            <input type="text"  placeholder="Enter the Url" name="fullUrl" id="fullUrl" required class="form-control mr-2 col">
            <button type="submit" class="btn btn-info   " ><i class="fas fa-poo-storm" style="padding: 5%;"></i>Shrink</button>
        </form>
        
        <table class="table table-striped table-responsive ">
            <thead>
                <tr class="alert alert-secondary navbar-dark">
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody class="">
                <% shortUrls.forEach(shortUrl =>{ %>
                    <tr>
                        <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
                        </td>
                        <td><a href="<%= shortUrl.short%>" target="_blank"><%= shortUrl.short%></a></td>
                        <td><%= shortUrl.clicks %></td>
                    </tr>
               <% }) %> 
                
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
